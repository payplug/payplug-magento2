<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.components">
            <block class="Payplug\Payments\Block\Formjs" name="payplug_payments_formjs" template="Payplug_Payments::checkout/formjs.phtml"/>
        </referenceBlock>

        <referenceContainer name="product.info.main">
            <block class="Magento\Catalog\Block\Product\View" name="payplug-payments-product-oney-wrapper" after="product.info.price" template="Payplug_Payments::oney/simulation_wrapper.phtml">
                <block class="Payplug\Payments\Block\Oney\Simulation" name="payplug-payments-product-oney-simulation" template="Payplug_Payments::oney/simulation.phtml"/>
            </block>
        </referenceContainer>

        <referenceContainer name="product.info.form.content">
            <block class="Payplug\Payments\Block\ApplePay\Button" name="product.info.button.apple.pay" template="Payplug_Payments::product/button-apple-pay.phtml" after="-" />
        </referenceContainer>

        <referenceContainer name="product.info.options.wrapper.bottom">
            <block class="Payplug\Payments\Block\ApplePay\Button" name="product.info.button.apple.pay.options.wrapper" template="Payplug_Payments::product/button-apple-pay.phtml" after="-" />
        </referenceContainer>
    </body>
</page>
