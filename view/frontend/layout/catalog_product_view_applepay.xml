<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Template" name="payplug_payments_formjs" template="Payplug_Payments::checkout/formjs.phtml">
                <arguments>
                    <argument name="urlProviderViewModel" xsi:type="object">Payplug\Payments\ViewModel\UrlProvider</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceContainer name="product.info.form.content">
            <block class="Payplug\Payments\Block\ApplePay\ProductButton" name="product.info.button.apple.pay"
                   template="Payplug_Payments::product/button-apple-pay.phtml" after="-"/>
        </referenceContainer>

        <referenceContainer name="product.info.options.wrapper.bottom">
            <block class="Payplug\Payments\Block\ApplePay\ProductButton" name="product.info.button.apple.pay.options.wrapper"
                   template="Payplug_Payments::product/button-apple-pay.phtml" after="-"/>
        </referenceContainer>
    </body>
</page>
